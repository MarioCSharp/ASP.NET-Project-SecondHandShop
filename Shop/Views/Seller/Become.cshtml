@using Shop.Models.Seller
@model BecomeSellerFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h3 class="text-center">Become seller</h3>
        <hr />
        <div class="form-group">
            <form method="post">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" placeholder="London, Berlin etc...">
                <span asp-validation-for="City" class="text-danger"></span>
            </form>
        </div>
        <div class="form-group">
            <form method="post">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder = "+359-111-111-111">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </form>
        </div>
        <input type = "submit" class = "btn btn-primary" value = "Become" />
    </div>
</div>
